config SOC_NRF54H20
	bool "nRF54H20"
	depends on SOC_SERIES_NRF54HX

if SOC_NRF54H20

config SOC_NRF54H20_ENG0_CPUAPP
	bool
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ARM_SAU
	select CPU_HAS_DCACHE
	select CPU_HAS_ICACHE
	select CPU_HAS_FPU

config SOC_NRF54H20_ENG0_CPURAD
	bool
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ARM_SAU
	select CPU_HAS_DCACHE
	select CPU_HAS_ICACHE
	select CPU_HAS_FPU

choice
	prompt "nRF54H20 MCU Selection"

config SOC_NRF54H20_ENG0_CPUAPP
	bool "NRF54H20_ENG0_CPUAPP"

config SOC_NRF54H20_ENG0_CPURAD
	bool "NRF54H20_ENG0_CPURAD"

endchoice

config NRF_ENABLE_ICACHE
	bool "Instruction cache (I-Cache)"
	default y

endif # SOC_NRF54H20
